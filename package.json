{
  "name": "react-textarea-markdown-editor",
  "version": "2.2.1",
  "description": "React Markdown Editor based on Textarea",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "keywords": [
    "react",
    "markdown",
    "editor"
  ],
  "scripts": {
    "clean": "rimraf build",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage",
    "test-coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build": "yarn clean && rollup -c && yarn sass",
    "sass": "node-sass src -o build && copyfiles -f src/*.scss build",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/abelchee/react-textarea-markdown-editor.git"
  },
  "bugs": {
    "url": "https://github.com/abelchee/react-textarea-markdown-editor/issues"
  },
  "files": [
    "build"
  ],
  "homepage": "https://github.com/abelchee/react-textarea-markdown-editor",
  "author": "Abel Chee <abel.chee@gmail.com>",
  "license": "MIT",
  "private": false,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "raf/polyfill"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/src/__mocks__/svg.ts"
    }
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/markdown-it": "^12.0.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "copyfiles": "^2.3.0",
    "coveralls": "^3.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "jest": "^26.4.2",
    "jsdom": "^16.4.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts-ts": "^3.1.0",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.3.0",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react-enhanced-textarea": "3.1.2",
    "react-use": "^17.2.1"
  }
}
